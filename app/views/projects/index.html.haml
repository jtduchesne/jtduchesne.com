%h4= t('.title')

%table
  %thead
    %tr
      %th= Project.human_attribute_name(:name)
      %th= Project.human_attribute_name(:description)
      %th= Project.human_attribute_name(:live_url)
      %th= Project.human_attribute_name(:github_url)
      %th
      %th
      %th

  %tbody
    - @projects.each do |project|
      %tr
        %td= project.name
        %td= project.description
        %td= project.live_url
        %td= project.github_url
        %td= link_to t('show'), url_for(action: 'show', id: project)
        %td= link_to t('edit'), url_for(action: 'edit', id: project)
        %td= link_to t('destroy'), url_for(action: 'destroy', id: project), method: :delete, data: { confirm: t('.confirm', name: project.name) }

%br

= link_to t('.new'), url_for(action: 'new')
