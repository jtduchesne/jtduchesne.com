%h5= t('.title')

%ul.list-group.mt-4
  %a.list-group-item.list-group-item-action{class: "d-flex justify-content-between align-items-center text-reset",
                                            href: url_for(controller: 'abouts', action: 'index')}
    = t('admin.abouts.index.title')
    %div
      %small.text-muted= l(@abouts.last.created_at.to_date) unless @abouts.blank?
      %span.badge.badge-pill.badge-secondary= @abouts.count
  
  %a.list-group-item.list-group-item-action{class: "d-flex justify-content-between align-items-center text-reset",
                                            href: url_for(controller: 'users', action: 'index')}
    = t('admin.users.index.title')
    %span.badge.badge-pill.badge-secondary= @users.count
