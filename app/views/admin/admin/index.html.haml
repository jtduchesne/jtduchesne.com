%h5= t('.title')

.list-group.mt-4
  %a.list-group-item.list-group-item-action{class: "d-flex justify-content-between text-reset",
                                            href: url_for(controller: 'messages', action: 'index')}
    = t('admin.messages.index.title')
    %div
      %span.badge.badge-pill.badge-primary= @messages.count
  
  %a.list-group-item.list-group-item-action{class: "d-flex justify-content-between text-reset",
                                            href: url_for(controller: 'abouts', action: 'index')}
    = t('admin.abouts.index.title')
    %div
      - unless @abouts.published.empty?
        %small.text-muted.mx-1{title: t('.abouts.date')}= l(@abouts.current.published_on.to_date)
      %span.badge.badge-pill.badge-primary{title: t('.abouts.published')}= @abouts.published.count
      %span.badge.badge-pill.badge-secondary{title: t('.abouts.draft')}= @abouts.draft.count
  
  %a.list-group-item.list-group-item-action{class: "d-flex justify-content-between text-reset",
                                            href: url_for(controller: 'users', action: 'index')}
    = t('admin.users.index.title')
    %div
      %span.badge.badge-pill.badge-primary{title: t('.users.verified')}= @users.verified.count
      %span.badge.badge-pill.badge-secondary{title: t('.users.unverified')}= @users.unverified.count
