= form_with model: @message, url: url_for_form(@message) do |f|
  - if @message.errors.any?
    = render 'form_errors', model: @message

  .form-group
    = f.label :from, class: "sr-only"
    = f.text_field :from, class: "form-control", placeholder: Message.human_attribute_name(:from)
  .form-group.text-center.mb-0
    = f.label :subject
    = f.select :subject, options_for_subject(@message), class: "form-control"
  .form-group
    = f.label :body, class: "sr-only"
    = f.text_area :body, class: "form-control"
  
  = yield f
